pipeline {
    agent any
    parameters {
        string(name: 'REPO_URL', defaultValue: 'https://github.com/siddha200340/node-docker-app.git', description: 'Git repository URL')
        string(name: 'BRANCH_NAME', defaultValue: 'master', description: 'Branch to build from')
    }
    environment {
        IMAGE_NAME = 'node-docker-app-image'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: "${params.BRANCH_NAME}", url: "${params.REPO_URL}"
            }
        }

        stage('Build') {
            steps {
                bat "npm install"
                bat "docker build -t %IMAGE_NAME% ."
            }
        }

        stage('Quality Checks') {
            parallel {
                stage('Lint Dockerfile') {
                    steps {
                        bat "type Dockerfile | docker run --rm -i hadolint/hadolint"
                    }
                }
                stage('Test') {
                    steps {
                        bat "npm test"
                    }
                }
            }
        }    
        stage('Deploy') {
            steps {
                // Remove container if exists; do not fail if not present
               bat "docker-compose down || exit 0"
               bat "docker-compose up -d --build"
            }
        }
    }
}
