pipeline {
    agent any
    environment {
        IMAGE_NAME = 'node-docker-app-image'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: "${params.BRANCH_NAME}", url: "${params.REPO_URL}"
            }
        }

        stage('Build') {
            steps {
                bat "npm install"
                bat "docker build -t %IMAGE_NAME% ."
            }
        }

        stage('Test') {
            steps {
                bat "npm test"
            }
        }

        stage('Deploy') {
            steps {
                // Remove container if exists; do not fail if not present
               bat "docker-compose down || exit 0"
               bat "docker-compose up -d --build"
            }
        }
    }
}
